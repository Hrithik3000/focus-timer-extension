{
  "manifest_version": 3,
  "name": "Focus Timer - Productivity Booster",
  "version": "1.0.1",
  "description": "A Pomodoro timer with website blocking to boost your productivity and focus",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background-fixed.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Timer - Click to start focusing!"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-fixed.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}